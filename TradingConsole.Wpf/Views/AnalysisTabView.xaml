<UserControl x:Class="TradingConsole.Wpf.Views.AnalysisTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:TradingConsole.Wpf.ViewModels"
             xmlns:converters="clr-namespace:TradingConsole.Wpf.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodels:AnalysisTabViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="2800">
    <UserControl.Resources>
        <converters:ValueToBrushConverter x:Key="ValueToBrushConverter"/>
        <converters:ValueToSignConverter x:Key="ValueToSignConverter"/>

        <CollectionViewSource x:Key="AnalysisResultsGrouped"
                              Source="{Binding AnalysisResults}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="FullGroupIdentifier"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    <!-- The outer Grid ensures the DataGrid has a constrained width, enabling horizontal scrolling -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Real-time Analysis Results" Margin="10" FontSize="18" FontWeight="Bold"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Source={StaticResource AnalysisResultsGrouped}}"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  BorderThickness="1"
                  BorderBrush="LightGray"
                  Margin="10"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="True"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  RowDetailsVisibilityMode="Collapsed">
            <DataGrid.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                        <Expander IsExpanded="True"
                                                  Background="#F0F0F0"
                                                  BorderBrush="LightGray"
                                                  BorderThickness="0,0,0,1"
                                                  Margin="0,5,0,0">
                                            <Expander.Header>
                                                <StackPanel Orientation="Horizontal" Margin="5,0">
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding ItemCount, StringFormat=({0})}" Margin="5,0,0,0" FontStyle="Italic" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Expander.Header>
                                            <ItemsPresenter/>
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </DataGrid.GroupStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" Width="200"/>

                <!-- NEWLY ADDED COLUMNS FROM YOUR FILE -->
                <DataGridTextColumn Header="Context" Binding="{Binding IntradayContext}" Width="120"/>
                <DataGridTextColumn Header="Trade Signal" Binding="{Binding FinalTradeSignal}" Width="250"/>
                <DataGridTextColumn Header="Conviction" Binding="{Binding ConvictionScore}" Width="80"/>
                <DataGridTextColumn Header="Narrative" Binding="{Binding MarketNarrative}" Width="300"/>

                <DataGridTemplateColumn Header="Daily Bias" Width="180">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DailyBias}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DailyBias, Converter={StaticResource ValueToSignConverter}, ConverterParameter='ContainsBullish'}" Value="True">
                                                <Setter Property="Foreground" Value="DarkGreen"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding DailyBias, Converter={StaticResource ValueToSignConverter}, ConverterParameter='ContainsBearish'}" Value="True">
                                                <Setter Property="Foreground" Value="DarkRed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding DailyBias, Converter={StaticResource ValueToSignConverter}, ConverterParameter='ContainsRotational'}" Value="True">
                                                <Setter Property="Foreground" Value="DarkBlue"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Structure (Multi-Day)" Binding="{Binding MarketStructure}" Width="160"/>

                <!-- NEWLY ADDED COLUMNS FROM YOUR FILE -->
                <DataGridTextColumn Header="Open Type" Binding="{Binding OpenTypeSignal}" Width="180"/>
                <DataGridTextColumn Header="vs Y-Profile" Binding="{Binding YesterdayProfileSignal}" Width="180"/>

                <DataGridTemplateColumn Header="1m Candle" Width="210">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding CandleSignal1Min}" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CandleSignal1Min, Converter={StaticResource ValueToSignConverter}, ConverterParameter=ContainsBullish}">
                                                <Setter Property="Foreground" Value="DarkGreen"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CandleSignal1Min, Converter={StaticResource ValueToSignConverter}, ConverterParameter=ContainsBearish}">
                                                <Setter Property="Foreground" Value="DarkRed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CandleSignal1Min, Converter={StaticResource ValueToSignConverter}, ConverterParameter=ContainsDoji}">
                                                <Setter Property="Foreground" Value="DarkOrange"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- NEWLY ADDED COLUMNS FROM YOUR FILE -->
                <DataGridTextColumn Header="Anchored VWAP" Binding="{Binding AnchoredVwap, StringFormat=N2}" Width="120"/>
                <DataGridTextColumn Header="VWAP Band Signal" Binding="{Binding VwapBandSignal}" Width="140"/>

                <DataGridTemplateColumn Header="vs VWAP" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding PriceVsVwapSignal}" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding PriceVsVwapSignal}" Value="Above VWAP">
                                                <Setter Property="Foreground" Value="Green"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding PriceVsVwapSignal}" Value="Below VWAP">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="OI Signal" Width="130">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding OiSignal}" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding OiSignal}" Value="Long Buildup">
                                                <Setter Property="Foreground" Value="#10a54a"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding OiSignal}" Value="Short Covering">
                                                <Setter Property="Foreground" Value="#84d2a1"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding OiSignal}" Value="Short Buildup">
                                                <Setter Property="Foreground" Value="#e34949"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding OiSignal}" Value="Long Unwinding">
                                                <Setter Property="Foreground" Value="#f5a1a1"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding OiSignal}" Value="Neutral">
                                                <Setter Property="Foreground" Value="Gray"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="IB High" Binding="{Binding InitialBalanceHigh, StringFormat={}{0:N2}}" Width="100"/>
                <DataGridTextColumn Header="IB Low" Binding="{Binding InitialBalanceLow, StringFormat={}{0:N2}}" Width="100"/>
                <DataGridTemplateColumn Header="IB Signal" Width="130">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding InitialBalanceSignal}" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding InitialBalanceSignal, Converter={StaticResource ValueToSignConverter}, ConverterParameter='ContainsBreakout'}" Value="True">
                                                <Setter Property="Foreground" Value="DarkGreen"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding InitialBalanceSignal, Converter={StaticResource ValueToSignConverter}, ConverterParameter='ContainsBreakdown'}" Value="True">
                                                <Setter Property="Foreground" Value="DarkRed"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding InitialBalanceSignal, Converter={StaticResource ValueToSignConverter}, ConverterParameter='ContainsTesting'}" Value="True">
                                                <Setter Property="Foreground" Value="DarkOrange"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="dVAH" Binding="{Binding DevelopingVah, StringFormat={}{0:N2}}" Width="100"/>
                <DataGridTextColumn Header="dPOC" Binding="{Binding DevelopingPoc, StringFormat={}{0:N2}}" Width="100"/>
                <DataGridTextColumn Header="dVAL" Binding="{Binding DevelopingVal, StringFormat={}{0:N2}}" Width="100"/>
                <DataGridTextColumn Header="dVPOC" Binding="{Binding DevelopingVpoc, StringFormat={}{0:N2}}" Width="100"/>

                <DataGridTemplateColumn Header="MP Signal" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding MarketProfileSignal}" TextWrapping="Wrap" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding MarketProfileSignal, Converter={StaticResource ValueToSignConverter}, ConverterParameter='ContainsAcceptance'}" Value="True">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding MarketProfileSignal, Converter={StaticResource ValueToSignConverter}, ConverterParameter='Contains &gt; Y-VAH'}" Value="True">
                                                <Setter Property="Foreground" Value="DarkGreen"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding MarketProfileSignal, Converter={StaticResource ValueToSignConverter}, ConverterParameter='Contains &lt; Y-VAL'}" Value="True">
                                                <Setter Property="Foreground" Value="DarkRed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding MarketProfileSignal, Converter={StaticResource ValueToSignConverter}, ConverterParameter='ContainsBreakout'}" Value="True">
                                                <Setter Property="Foreground" Value="Green"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding MarketProfileSignal, Converter={StaticResource ValueToSignConverter}, ConverterParameter='ContainsBreakdown'}" Value="True">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="1m OBV Divergence" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ObvDivergenceSignal1Min}" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ObvDivergenceSignal1Min, Converter={StaticResource ValueToSignConverter}, ConverterParameter=ContainsBullish}">
                                                <Setter Property="Foreground" Value="DarkGreen"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ObvDivergenceSignal1Min, Converter={StaticResource ValueToSignConverter}, ConverterParameter=ContainsBearish}">
                                                <Setter Property="Foreground" Value="DarkRed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="5m OBV Divergence" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ObvDivergenceSignal5Min}" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ObvDivergenceSignal5Min, Converter={StaticResource ValueToSignConverter}, ConverterParameter=ContainsBullish}">
                                                <Setter Property="Foreground" Value="DarkGreen"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ObvDivergenceSignal5Min, Converter={StaticResource ValueToSignConverter}, ConverterParameter=ContainsBearish}">
                                                <Setter Property="Foreground" Value="DarkRed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="1m RSI Signal" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding RsiSignal1Min}" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RsiSignal1Min, Converter={StaticResource ValueToSignConverter}, ConverterParameter=ContainsBullish}">
                                                <Setter Property="Foreground" Value="DarkGreen"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RsiSignal1Min, Converter={StaticResource ValueToSignConverter}, ConverterParameter=ContainsBearish}">
                                                <Setter Property="Foreground" Value="DarkRed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="5m RSI Signal" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding RsiSignal5Min}" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RsiSignal5Min, Converter={StaticResource ValueToSignConverter}, ConverterParameter=ContainsBullish}">
                                                <Setter Property="Foreground" Value="DarkGreen"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RsiSignal5Min, Converter={StaticResource ValueToSignConverter}, ConverterParameter=ContainsBearish}">
                                                <Setter Property="Foreground" Value="DarkRed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="IV Rank" Binding="{Binding IvRank, StringFormat=N2}" Width="80"/>
                <DataGridTextColumn Header="IVP (Day)" Binding="{Binding IvPercentile, StringFormat=N2}" Width="80"/>
                <DataGridTemplateColumn Header="IV Trend" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding IvTrendSignal}" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IvTrendSignal}" Value="IV Rising">
                                                <Setter Property="Foreground" Value="DarkGreen"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IvTrendSignal}" Value="IV Crush Warning">
                                                <Setter Property="Foreground" Value="DarkRed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IvTrendSignal}" Value="IV Low &amp; Stable">
                                                <Setter Property="Foreground" Value="OrangeRed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
